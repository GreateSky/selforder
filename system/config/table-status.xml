<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<!--餐桌管理-->
	<package name="table" extends="struts-default,json-default" namespace="/api/table">
		<!--保存餐桌信息-->
		<action name = "insertTable" class="tableAction" method="insertTable">
			<result type="json">
				<param name="root">resultJson</param>
			</result> 
		</action>
		<!--获取餐桌列表-->
		<action name = "getTableList" class="tableAction" method="getTableList">
			<result type="json">
				<param name="root">resultJson</param>
			</result> 
		</action>
		<!--获取餐桌详情-->
		<action name = "getTableInfo" class="tableAction" method="getTableInfo">
			<result type="json">
				<param name="root">resultJson</param>
			</result> 
		</action>
		<!--更新餐桌详情-->
		<action name = "updateTable" class="tableAction" method="updateTable">
			<result type="json">
				<param name="root">resultJson</param>
			</result> 
		</action>
		<!--新增包厢-->
		<action name = "insertRoom" class="tableAction" method="insertRoom">
			<result type="json">
				<param name="root">resultJson</param>
			</result> 
		</action>
		<!--更新包厢-->
		<action name = "updateRoom" class="tableAction" method="updateRoom">
			<result type="json">
				<param name="root">resultJson</param>
			</result> 
		</action>
		<!--包厢列表-->
		<action name = "roomList" class="tableAction" method="roomList">
			<result type="json">
				<param name="root">resultJson</param>
			</result> 
		</action>
	</package>
	
</struts>
